<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace等于mapper接口类的全限定名,这样实现对应 -->
<mapper namespace="com.sora.mapper.MenuMapper">
    
    <resultMap id="MenuResultMap" type="com.sora.entity.Menu">
        <id property="id" column="id"/>
        <result property="pattern" column="pattern"/>
        <collection property="roles" ofType="com.sora.entity.Role">
            <id property="id" column="id"/>
            <result property="name" column="name"/>
            <result property="nameZh" column="nameZh"/>
        </collection>
    </resultMap>

    <select id="getAllMenus" resultMap="MenuResultMap">
        select m.*, r.id as rid, r.name as rname, r.name_Zh as rnameZh
        from menu m
        left join security.menu_role mr on m.id = mr.mid
        left join security.role r on r.id = mr.rid
    </select>

</mapper>